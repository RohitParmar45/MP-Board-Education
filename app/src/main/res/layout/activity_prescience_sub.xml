<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/logobackjpg"
    android:layout_height="match_parent"
    tools:context=".scienceClass.prescienceSubActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="54dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="42dp"
                android:layout_gravity="center"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="32dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                android:elevation="7dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fill"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/aclonica"
                            android:padding="5dp"
                            android:textColor="@color/colorBlue"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="the Form"
                            android:fontFamily="@font/aclonica"
                            android:layout_marginLeft="1dp"
                            android:layout_marginBottom="5dp"
                            android:padding="5dp"
                            android:textColor="@color/colorBlue"
                            android:textSize="18sp"
                            android:textStyle="bold"/>


                    </LinearLayout>


                    <View
                        android:id="@+id/view"
                        android:layout_width="120dp"
                        android:layout_height="3dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/background" />

                    <EditText
                        android:id="@+id/nameReg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/textboxtransparent"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPurple"
                        android:ems="10"
                        android:hint="Full Name"
                        android:textSize="18sp"
                        android:inputType="textPersonName"
                        android:padding="15dp" />

                    <EditText
                        android:id="@+id/phoneReg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/textboxtransparent"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPurple"
                        android:ems="10"
                        android:hint="Phone Number"
                        android:inputType="number"
                        android:padding="15dp"
                        android:textSize="18sp" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner"
                        android:spinnerMode="dropdown"
                        android:background="@android:drawable/btn_dropdown"
                        android:gravity="center"
                        android:layout_marginHorizontal="13dp"
                        android:drawableTint="@color/colorPurple"
                        android:layout_marginVertical="10dp">

                    </Spinner>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner2"
                        android:spinnerMode="dropdown"
                        android:background="@android:drawable/btn_dropdown"
                        android:gravity="center"
                        android:layout_marginHorizontal="13dp"
                        android:drawableTint="@color/colorPurple"
                        android:layout_marginVertical="10dp">

                    </Spinner>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/availableSub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/textboxtransparent"
                        android:drawablePadding="15dp"
                        android:ems="10"
                        android:textColorHint="@color/black"
                        android:textSize="18sp"
                        android:hint="Available Subject : "
                        android:inputType="text"
                        android:padding="15dp" />


                    <EditText
                        android:id="@+id/addPercent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/textboxtransparent"
                        android:drawablePadding="15dp"
                        android:ems="10"
                        android:visibility="gone"
                        android:textSize="18sp"
                        android:hint="10th Percent"
                        android:inputType="numberDecimal"
                        android:padding="15dp" />

                    <EditText
                        android:id="@+id/addReg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/textboxtransparent"
                        android:drawablePadding="15dp"
                        android:ems="10"
                        android:hint="Address"
                        android:inputType="text"
                        android:padding="15dp"
                        android:textSize="18sp" />


                    <Button
                        android:id="@+id/submitReg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Submit"
                        android:textColor="@color/color_white" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="NOTE   :"
                            android:textColor="@color/colorBlue"
                            android:layout_marginLeft="6dp"
                            android:textSize="10sp" />
                        <TextView
                            android:id="@+id/textnote"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginHorizontal="12dp"
                            android:text="3 day Free classes , Classes are conducting on ZOOM app"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:layout_marginBottom="54dp"/>


                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


</ScrollView>

